  "peerDependencies": {
    "bulma": ">=0.7.1",
    "classnames": ">=2",
    "font-awesome": ">=5",
    "prop-types": ">=15",
    "react": ">=15"
  },
  "dependencies": {
    "wasabi-common": "2.2.3"
  },
  "babel": {
    "presets": [
      "env",
      "react",
      "stage-2"
    ]
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/tools/jest/test-shim.js",
      "<rootDir>/tools/jest/test-setup.js"
    ],
    "collectCoverageFrom": [
      "**/src/**/*.(ts|tsx)"
    ],
    "coverageReporters": [
      "text-summary",
      "html"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "verbose": true,
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/tools/jest/test-preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/**/*.spec.(ts|tsx)"
    ]
  }
