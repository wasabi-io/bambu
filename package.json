    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "file-extension": "^4.0.5",
    "gulp": "^3.9.1",
    "gulp-postcss": "^7.0.1",
    "highlight.js": "^9.12.0",
    "html-webpack-plugin": "^3.2.0",
    "http-server": "^0.11.1",
    "jest": "^23.1.0",
    "js-criteria": "^2.1.1",
    "mobx": "^5.0.2",
    "mobx-react": "^5.2.3",
    "module": "^1.2.5",
